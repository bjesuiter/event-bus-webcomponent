{
  "name": "event-bus-webcomponent",
  "version": "1.0.0-2",
  "description": "A webcomponent which provides an event bus as dom element for easy access with document.querySelector()",
  "type": "module",
  "files": [],
  "scripts": {
    "del_dist": "del dist/*",
    "tsc": "tsc",
    "bundle": "esbuild dist/index.js --bundle --outfile=dist/bundle.js --format=esm --platform=browser",
    "build": "run-s del_dist tsc bundle",
    "start": "npm run watch-build",
    "watch-build": "concurrently \"npm:watch-tsc\" \"npm:watch-bundle\" \"npm:serve\"",
    "watch-bundle": "npm run bundle -- --watch",
    "watch-tsc": "del dist/* && tsc --watch",
    "serve": "web-dev-server"
  },
  "dependencies": {
    "@roarr/browser-log-writer": "^1.1.1",
    "roarr": "^7.11.0",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.31",
    "concurrently": "^7.2.0",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.39",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "license": "MIT"
}
